/*6- Leia 8 números inteiros para dentro de um vetor e determine:
     
     O maior valor e em qual posição ele está
     O menor valor e em qual posição ele está*/

#include <iostream>
   using namespace std;
   int main() {
      
       int n[8];
       for (int i = 0; i < 8; i++) {
           cout << "Digite o valor do numero ";
       cin >> n[i];}


       cout << "Os valores digitados foram: ";
       for (int i = 0; i < 5; i++) {
           cout << n[i] << " ";
       }


       float maior = n[0], menor = n[0];
       float posmax = n[0], posmin = n[0];
      
       for (int i = 1; i < 8; i++) {
           if (n[i] > maior){
               maior = n[i];
               posmax = i;
           }
           if (n[i] < menor){
               menor = n[i];
               posmin= i;
           }
       }


        cout << "O maior valor é " << maior << " e está na posição " << posmax + 1 << endl;
        cout << "O menor valor é " << menor << " e está na posição " << posmin + 1 << endl;
   return 0;
   }





